<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".Homepage">


<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Homepage">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="270dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.097"
            app:srcCompat="@drawable/the_wild_vet_logo_01" />

        <Button
            android:id="@+id/btnNews"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:drawableTop="@drawable/ic_news"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="News"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toEndOf="@+id/btnCheckUps"
            app:layout_constraintTop_toBottomOf="@+id/btnVaccination"
            app:layout_constraintVertical_bias="0.054" />

        <Button
            android:id="@+id/btnContactUs"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:drawableTop="@drawable/ic_contact_us"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="Contact us"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toEndOf="@+id/btnSubscrip"
            app:layout_constraintTop_toBottomOf="@+id/btnNews"
            app:layout_constraintVertical_bias="0.071" />

        <Button
            android:id="@+id/btnSubscrip"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:drawableTop="@drawable/ic_subscription"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="Subscription"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCheckUps"
            app:layout_constraintVertical_bias="0.068" />

        <Button
            android:id="@+id/btnVaccination"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:drawableTop="@drawable/ic_vaccination"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="Vaccination"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toEndOf="@+id/btnMyPets"
            app:layout_constraintTop_toBottomOf="@+id/search_field"
            app:layout_constraintVertical_bias="0.049" />

        <Button
            android:id="@+id/btnMyPets"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:drawableTop="@drawable/ic_pawprint"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="My pets"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_field"
            app:layout_constraintVertical_bias="0.05" />

        <Button
            android:id="@+id/btnSupport"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/ic_support"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="13dp"
            android:text="Basic decision support system"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnContactUs"
            app:layout_constraintVertical_bias="0.395" />

        <Button
            android:id="@+id/btnAccountSetting"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:drawableTop="@drawable/ic_settings"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="13dp"
            android:text="Account Setting"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.719"
            app:layout_constraintStart_toEndOf="@+id/btnContactUs"
            app:layout_constraintTop_toBottomOf="@+id/btnParasite"
            app:layout_constraintVertical_bias="0.071" />

        <Button
            android:id="@+id/btnParasite"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:drawableTop="@drawable/ic_parasite"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Parasite prevention"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.719"
            app:layout_constraintStart_toEndOf="@+id/btnNews"
            app:layout_constraintTop_toBottomOf="@+id/btnMedication"
            app:layout_constraintVertical_bias="0.054" />

        <Button
            android:id="@+id/btnCheckUps"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:drawableTop="@drawable/ic_check_up"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="Check-ups"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMyPets"
            app:layout_constraintVertical_bias="0.052" />

        <Button
            android:id="@+id/btnMedication"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:drawableTop="@drawable/ic_medication"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="Medication"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="12dp"
            app:backgroundTint="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toEndOf="@+id/btnVaccination"
            app:layout_constraintTop_toBottomOf="@+id/search_field"
            app:layout_constraintVertical_bias="0.049" />

        <EditText
            android:id="@+id/search_field"
            android:layout_width="336dp"
            android:layout_height="35dp"
            android:background="@drawable/search_outline"
            android:drawableLeft="@drawable/ic_search"
            android:ems="10"
            android:hint="Search"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:layout_constraintVertical_bias="0.037" />

</androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_drawer_menu"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"/>



</androidx.drawerlayout.widget.DrawerLayout>