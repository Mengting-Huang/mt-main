<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".MyPets">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105"
        app:srcCompat="@drawable/the_wild_vet_logo_01" />

    <EditText
        android:id="@+id/search_field2"
        android:layout_width="336dp"
        android:layout_height="35dp"
        android:background="@drawable/search_outline"
        android:drawableLeft="@drawable/ic_search"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.028" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_field2"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/ic_pawprint" />

    <TextView
        android:id="@+id/PetTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/tittle_outline"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="My Pets"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/border_layout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/PetName1"
        android:layout_width="380dp"
        android:layout_height="67dp"
        android:background="@drawable/petlist_outline"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Juhua"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PetTittle"
        app:layout_constraintVertical_bias="0.015" />

    <ImageView
        android:id="@+id/icon_cat"
        android:layout_width="45dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/PetName1"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/PetName1"
        app:layout_constraintTop_toTopOf="@+id/PetName1"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/ic_animal_cat" />

    <TextView
        android:id="@+id/PetName2"
        android:layout_width="380dp"
        android:layout_height="67dp"
        android:background="@drawable/petlist_outline"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Doggie"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PetName1"
        app:layout_constraintVertical_bias="0.027" />

    <ImageView
        android:id="@+id/icon_dog"
        android:layout_width="45dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="@+id/PetName2"
        app:layout_constraintEnd_toEndOf="@+id/PetName2"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/PetName2"
        app:layout_constraintTop_toTopOf="@+id/PetName2"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/ic_animal_dog" />

    <TextView
        android:id="@+id/PetName3"
        android:layout_width="380dp"
        android:layout_height="67dp"
        android:background="@drawable/petlist_outline"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Pet's Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PetName2"
        app:layout_constraintVertical_bias="0.04" />

    <ImageView
        android:id="@+id/icon_hedgehog"
        android:layout_width="45dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="@+id/PetName3"
        app:layout_constraintEnd_toEndOf="@+id/PetName3"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/PetName3"
        app:layout_constraintTop_toTopOf="@+id/PetName3"
        app:layout_constraintVertical_bias="0.476"
        app:srcCompat="@drawable/ic_animal_hedgehog" />

    <ImageView
        android:id="@+id/icon_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/icon_plus"
        app:layout_constraintTop_toBottomOf="@+id/border_layout"
        app:layout_constraintVertical_bias="0.129"
        app:srcCompat="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/icon_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border_layout"
        app:layout_constraintVertical_bias="0.129"
        app:srcCompat="@drawable/ic_add" />

    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/icon_edit"
        app:layout_constraintTop_toBottomOf="@+id/border_layout"
        app:layout_constraintVertical_bias="0.129"
        app:srcCompat="@drawable/ic_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>